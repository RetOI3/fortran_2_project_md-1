{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gfortran build active file",
            "command": "/usr/bin/gfortran",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-J${workspaceFolder}/modules" // This line tells the compiler where to find the module files
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}